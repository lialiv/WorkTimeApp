<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_dark"
    android:padding="4dp"
    >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/list_horizontal_margin"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Description"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
         />
s
    <TextView
        android:id="@+id/tv_entry_time"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_date"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/list_horizontal_margin"
        android:text="Example application"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tv_exit_time"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/tv_entry_time"
        android:layout_toRightOf="@id/tv_entry_time"
        android:gravity="left|center_vertical"
        android:text="Example application"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/tv_exit_time"
        android:layout_toRightOf="@id/tv_exit_time"
        android:gravity="left|center_vertical"
        android:text="Example application"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size" />

</RelativeLayout>
